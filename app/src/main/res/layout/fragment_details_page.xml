<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".DetailsPageFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/detail_laout">

        <ImageView
                android:layout_width="284dp"
                android:layout_height="112dp"
                android:id="@+id/image_fotoDetail_laout"
                android:layout_alignParentStart="true"
                android:layout_marginStart="57dp"
                android:layout_marginTop="-1dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="70dp" android:layout_centerInParent="true"/>
        <TextView
                android:layout_width="303dp"
                android:layout_height="52dp"
                android:id="@+id/lbl_name"
                android:gravity="center"
                android:textSize="25sp"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/image_fotoDetail_laout"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="57dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="50dp"
                android:textAlignment="center"/>

        <TextView
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_designation"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/lbl_name"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="65dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="59dp"
                android:textSize="25sp"
                android:textAlignment="center"/>

        <TextView
                android:layout_width="269dp"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_salary"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp"
                android:layout_below="@+id/lbl_designation"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="79dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="63dp"
                android:textSize="25sp"
                android:textAlignment="center"/>

    </RelativeLayout>




</FrameLayout>