<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <fragment
            android:id="@+id/main_activity_fragment"
            android:name="com.example.recycleviewhomework.MainActivityFragment"
            tools:layout="@layout/fragment_main_activity"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="300sp"
            android:layout_height="match_parent" />
    <fragment
            android:id="@+id/details_fragment"
            android:name="com.example.recycleviewhomework.DetailsPageFragment"
            tools:layout="@layout/fragment_details_page"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/main_activity_fragment"
            android:layout_width="0sp"
            android:layout_height="match_parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>


</android.support.constraint.ConstraintLayout>